<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutForFragments"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="120dp"
        app:cardCornerRadius="40dp"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="655dp"

            android:background="#EFC1AE"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardFilm"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="40dp"

                >

                <ImageView
                    android:id="@+id/cardImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"

                    app:srcCompat="@drawable/the_godfather" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/cardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardFilm"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/the_stegris_black"
                android:gravity="center"
                android:text="The Godfather"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cardDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/the_stegris_semi_bold"
                android:gravity="center"
                android:text="The aging patriarch of an organized crime dynasty transfers control of his clandestine empire to his reluctant son."
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/cardYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardFilm"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/the_stegris_black"
                android:gravity="center"
                android:text="1972"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>